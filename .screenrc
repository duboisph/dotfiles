# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

# Enable visual bell
vbell on
vbell_msg "   -- Ring, Ring!! --   "

# Detach on hangup
autodetach on

# Caption
sorendition "=b ky"
hardstatus on
hardstatus alwayslastline "%{= bW}$USER@%H: %{= BW}%-Lw%{-B}%50>%n%f* %t%{-}%{= BW}%+Lw%< %{= bW}%-=%Y-%m-%d %c:%s"
